{% extends 'base.html.twig' %}

{% block title %}Modifying tasks{% endblock %}

{% block body %}
    <div class="d-flex flex-row-reverse">
        <div class="task-edit-close">
            {% if page == "week" %}
                <a href="{{ path('to_do_list_week')}}">
            {% elseif page == "all" %}
                <a href="{{ path('to_do_list_all')}}">
            {% elseif page == "day" %}
                <a href="{{ path('to_do_list_day')}}">
            {% endif %}
                <i class="fa fa-window-close fa-lg turquoise-color" aria-hidden="true"></i>
            </a>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <h3 class="font-weight-normal task-edit-title">Modify your task</h3>
    </div>
    {% form_theme task_form 'bootstrap_4_layout.html.twig' %}
    <div class="task-edit-form-container d-flex justify-content-center align-items-center">
        {{ form_start(task_form) }}
        <div>
            <div class="font-weight-bold">Content</div>
            <div>{{ form_row(task_form.content) }}</div>
        </div>
        <div>
            <div class="font-weight-bold">Category</div>
            <div>{{ form_row(task_form.category) }}</div>
        </div>
        <div>
            <div class="font-weight-bold">Day</div>
            <div>{{ form_row(task_form.day) }}</div>
        </div>
        <div class="d-flex justify-content-between">
            <div class="font-weight-bold">This week ?</div>
            <div>{{ form_widget(task_form.isOfTheWeek, {label_attr: {class: 'checkbox-custom'} }) }}</div>
        </div>
        <div class="d-flex flex-row-reverse mt-5">
            <button class="btn btn-lg done-button" type="submit">
                Done
            </button>
        </div>
        {{ form_end(task_form) }}
    </div>
{% endblock %}