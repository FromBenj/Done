{% extends 'base.html.twig' %}

{% block title %}All Tasks{% endblock %}

{% block body %}
<h2 class="text-center font-weight-bold"> Tasks of the Week </h2>
{% include 'components/_tasks-form.html.twig' %}
{% if tasks_urgent %}
    <h2 class="list-day">Urgent</h2>
    <div class="d-flex flex-column justify-content-center align-items-center urgent-items">
        {%  for task in tasks_urgent %}
            <div class="list-item">
                <div>
                    <h4 class="font-italic turquoise-blue-color">{{ task.day }}</h4>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <div class="list-content">{{ task.content }}</div>
                    <div class="d-flex justify-content-center align-items-center">
                        <div class="button-done"></div>
                        <div class="button-delete"></div>
                        <div class="button-week"></div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
