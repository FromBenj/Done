{% extends 'base.html.twig' %}

{% block title %}All Tasks{% endblock %}

{% block body %}
<div class="d-flex justify-content-around align-items-center">
    <div class="d-flex justify-content-around align-items-center">
        <p class="mb-0 mr-3 font-italic font-weight-bold">Day Tasks</p>
        <a href="{{ path('to_do_list_day') }}">
            <i class="fa fa-angle-left fa-7x" aria-hidden="true"></i>
        </a>
    </div>
    <h2 class="text-center font-weight-bold"> Tasks of the Week </h2>
    <div class="d-flex justify-content-around align-items-center">
        <a href="{{ path('to_do_list_all')}}">
            <i class="fa fa-angle-right fa-7x" aria-hidden="true"></i>
        </a>
        <p class="mb-0 ml-3 font-italic font-weight-bold">All Tasks</p>
    </div>
</div>
{% include 'components/_tasks-form.html.twig' %}
{% if tasks_urgent %}
    <h2 class="list-day">Urgent</h2>
    <div class="d-flex flex-column justify-content-center align-items-center urgent-items">
        {%  for task in tasks_urgent %}
            <div class="list-item">
                <div>
                    <h4 class="font-italic turquoise-blue-color">{{ task.day }}</h4>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <div class="list-content">{{ task.content }}</div>
                    <div class="d-flex justify-content-center align-items-center">
                        <a href="{{ path('task_done', {'id': task.id}) }}">
                            <div class="button-done"></div>
                        </a>
                        <div class="button-delete">
                            <form method="post" action="{{ path('task_delete', {'id': task.id, 'page' : 'week'}) }}">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                <button class="btn"></button>
                            </form>
                        </div>
                        <div class="button-week"></div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
